extends ./layout.pug

block container
    .contenido-principal
        h1 Nuevo Proyecto

        if errores
            each error in errores
                .alerta #error.texto

        form.agregar-proyecto(action="/new-project" method="post")
            .campo
                label(for="nombre") Nombre Proyecto
                input(type="text" id="nombre" name="nombre" placeholder="Nombre del proyecto")
            .campo.enviar
                input.boton(type="submit" value="Agregar")